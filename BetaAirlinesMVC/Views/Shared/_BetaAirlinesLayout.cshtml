<!DOCTYPE html>
<html class="no-js" lang="en">

<head>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/style.css">

    <title>Airline Booking System</title>
</head>

<body id="home" class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand"> <img src="~/img/logo1.png" height="40" width="40"> &nbsp;&nbsp;<strong><i>Nur Travels</i></strong></a>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ml-auto">
                    <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
                    <a href="@Url.Action("Index", "Admin")" class="nav-link">Admin</a>
                    <a href="@Url.Action("Index", "Airports")" class="nav-link">Airports</a>
                    <a href="@Url.Action("Index", "Bookedflights")" class="nav-link">BookedFlights</a>
                    <a href="@Url.Action("Index", "Contact")" class="nav-link">Contact</a>
                    <a href="@Url.Action("Index", "Flights")" class="nav-link">Flights</a>
                    <a href="@Url.Action("Index", "Users")" class="nav-link">Users</a>
                </ul>
                @if (Session != null && Session["id"] != null && Session["pw"] != null)
                {
                    <a>@Html.ActionLink("Logout", "Login", "Users", null, new { title = "Logout" })</a>
                }
                else
                {
                    <a href="@Url.Action("Create", "Users")" class="btn btn-info" role="button">Sign up</a>
                    <a style="visibility:hidden">H</a>
                    <a href="@Url.Action("Login", "Users")" class="btn btn-info" role="button">Login</a>
                }
            </div>
        </div>
    </nav>

    <main class="flex-grow-1">
        @RenderBody()
    </main>

    <!-- MAIN FOOTER -->
    <footer id="main-footer" class="bg-dark text-white mt-5 py-4">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <h1 class="h3">Nur's Airline System</h1>
                    <p>Copyright &copy; 2017</p>
                    @*<a class="btn btn-primary" href="@Url.Action("Index", "Contact")" data-toggle="modal" data-target="#contactModal">Contact Us</a>*@
                </div>
            </div>
        </div>
    </footer>
</body>

</html>
<style>
    html, body {
        height: 100%;
    }

    body {
        display: flex;
        flex-direction: column;
        margin: 0;
    }

    main {
        flex-grow: 1;
    }

    footer {
        background-color: #343a40;
        color: #fff;
        padding: 20px 0;
        text-align: center;
    }

</style>

