@model IEnumerable<BetaAirlinesMVC.Models.Contact>

@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/_BetaAirlinesLayout.cshtml";
}

<section class="content flexcolumn">
    <h1>It will show the details of the users' messages</h1>

    <h2>@ViewBag.Title</h2>
    <p>
        @Html.ActionLink("Send a Message", "Index", null, new { @class = "btn btn-primary" })
    </p>
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Subject</th>
                    <th>Message</th>
                    <th>Date</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td class="email">@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                        <td class="limitWidth">@Html.DisplayFor(modelItem => item.Message)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Active)</td>
                        <td class="buttons">
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
<style>
    /* Custom CSS for Messages table */
    .content {
        padding: 20px;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .email {
        width: 200px; /* Adjust width as needed */
    }

    .limitWidth {
        max-width: 200px; /* Adjust max-width as needed */
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
    }

    .buttons a {
        margin-right: 5px;
    }

    /* Optional: Add additional styling as needed */

</style>